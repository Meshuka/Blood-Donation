<!DOCTYPE html>
<html lang="en">

<head>
    
    <title>register</title>
</head>
<body>
    <div class="site-section bg-light" id="contact-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h2>REGISTER</h2>
                    
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 mb-5">
    
            <% include ./partials/messages %>
            <form action="/register" method="POST" class="p-5 bg-white">


              <div class="row form-group">
                  <div class="col-md-6 mb-3 mb-md-0">
                      <label class="text-black" for="email">Name</label>
                      <input type="name" id="name" class="form-control rounded-0" name="name" placeholder="Enter name" 
                       value="<%= typeof name != 'undefined' ? name : '' %>">
                  </div>
                  </div>
                 
                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="email">Email</label>
                            <input type="email" id="email" class="form-control rounded-0" name="email" placeholder="Enter email"
                            value="<%= typeof email != 'undefined' ? email : '' %>">
                        </div>
                        </div>
     
         
                        <div class="row form-group">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="text-black" for="password">Password</label>
                                <input type="password" id="password" class="form-control rounded-0" name="password" placeholder="Enter password"
                                value="<%= typeof password != 'undefined' ? password : '' %>">
                            </div>
                            </div>
                          <div class="row form-group">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label class="text-black" for="password2">Confirm Password</label>
                                    <input type="password" id="password2" class="form-control rounded-0" name="password2" placeholder="Confirm password"
                                    value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                                </div>
                                </div>
            
                                <div class="row form-group">

                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-black rounded-0 py-3 px-4">Register </button>
                                    </div>
                                
       
      </form>
      <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
    </div>
  </div>
</div>

    
    </body>
    
    </html>